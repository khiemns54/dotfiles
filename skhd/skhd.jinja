{% for key, apps in data["app_specifics"].items() -%}
#-----------------------
{{ key }} [
    {% for app in apps -%}
         "{{ data["apps"][app["app"]]["name"] }}": {{ data["modes"][app["mode"]]["key"] -}}
    {% endfor %}
]
{% endfor -%}
