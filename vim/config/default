syntax on
set nocompatible
" set number
set shiftwidth=2 softtabstop=2 expandtab
set autoindent
set wildmenu
set backspace=indent,eol,start
set clipboard+=unnamed
set tags=.tags;$HOME
set nowrap
let mapleader = 's'
set autoread
set listchars=tab:»-,trail:-,eol:↲,extends:»,precedes:«,nbsp:%
set wildignore+=*/tmp/*,*.so,*.swp,*.zip,*.jpg,*.png
set ts=1

set list
" set relativenumber
set visualbell
set hls
set ignorecase
set hidden
runtime macros/matchit.vim

filetype plugin on

command Reload source ~/.vimrc

noremap <Leader>p "*]p:set nopaste<CR>
noremap <Leader>y "+y)

" Moving in insert mode"
inoremap <C-j>  <down>
inoremap <C-k>  <up>
inoremap <C-h>  <left>
inoremap <C-l>  <right>

" Auto close brackets"
inoremap <> <><Left>
inoremap () ()<Left>
inoremap {} {}<Left>
inoremap [] []<Left>
inoremap "" ""<Left>
inoremap '' ''<Left>
inoremap `` ``<Left>

" Disable arrow keys in insertmode
inoremap <Up> <NOP>
inoremap <Down> <NOP>
inoremap <Left> <NOP>
inoremap <Right> <NOP>

" Disable arrow keys in normal mode
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>

" Disable s key
noremap s <NOP>

" Tab navigation"
nnoremap <Leader>1 1gt
nnoremap <Leader>2 2gt
nnoremap <Leader>3 3gt
nnoremap <Leader>4 4gt
nnoremap <Leader>5 5gt
nnoremap <Leader>6 6gt
nnoremap <Leader>7 7gt
nnoremap <Leader>8 8gt
nnoremap <Leader>9 9gt
nnoremap <Leader><Leader> o<ESC>
nnoremap <Leader>h 0
nnoremap <Leader>l $
nnoremap <Leader>f :NERDTreeFind<CR>
nnoremap <Leader>n :bp<CR>
nnoremap <Leader>d :bd<CR>
nnoremap <Leader>D :bd!<CR>
nnoremap <Leader>a mi=ip`i<CR>
nnoremap <Leader>w :w<CR>
nnoremap <Leader>n :bn<CR>
nnoremap <Leader>ag <ESC>:Ag<Space>
nnoremap <Leader>tt <ESC>:vert term<CR><C-w>L

nnoremap <Tab>   >>
nnoremap <S-Tab> <<
nnoremap Y y$
nnoremap <Space> i<Space><ESC>l

noremap <C-l> <C-w>l
noremap <C-h> <C-w>h
noremap <C-j> <C-w>j
noremap <C-k> <C-w>k

cnoremap <Up> <NOP>
cnoremap <Down> <NOP>
cnoremap <Left> <NOP>
cnoremap <Right> <NOP>

