syntax on
set nocompatible
set number
set shiftwidth=2 softtabstop=2 expandtab
set autoindent
set wildmenu
set backspace=indent,eol,start
set clipboard+=unnamed
set tags=.tags;$HOME
set nowrap
let mapleader = 's'
set autoread
set listchars=tab:»-,trail:-,eol:↲,extends:»,precedes:«,nbsp:%
set list
set relativenumber
set visualbell
set hls
set ignorecase

filetype plugin on

command Reload source ~/.vimrc
command! MakeTag !ctags -R .

noremap <Leader>p "*]p:set nopaste<CR>
noremap <Leader>y "+y)

" Moving in insert mode"
inoremap <C-j>  <down>
inoremap <C-k>  <up>
inoremap <C-h>  <left>
inoremap <C-l>  <right>

" Auto close brackets"
inoremap <> <><Left>
inoremap () ()<Left>
inoremap {} {}<Left>
inoremap [] []<Left>
inoremap "" ""<Left>
inoremap '' ''<Left>
inoremap `` ``<Left>

" Disable arrow keys in insertmode
inoremap <Up> <NOP>
inoremap <Down> <NOP>
inoremap <Left> <NOP>
inoremap <Right> <NOP>

" Disable arrow keys in normal mode
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>

" Disable s key
noremap s <NOP>

" Tab navigation"
nnoremap <Leader>1 1gt
nnoremap <Leader>2 2gt
nnoremap <Leader>3 3gt
nnoremap <Leader>4 4gt
nnoremap <Leader>5 5gt
nnoremap <Leader>6 6gt
nnoremap <Leader>7 7gt
nnoremap <Leader>8 8gt
nnoremap <Leader>9 9gt
nnoremap <Leader><Leader> o<ESC>
nnoremap <Leader>h 0
nnoremap <Leader>l $
nnoremap <Leader>f :NERDTreeFind<CR>
nnoremap <Leader>p :bp<CR>
nnoremap <Leader>a =ip<CR>

nnoremap <Tab>   >>
nnoremap <S-Tab> <<
nnoremap Y y$
nnoremap <Space> i<Space><ESC>l

noremap <C-l> <C-w>l
noremap <C-h> <C-w>h
noremap <C-j> <C-w>j
noremap <C-k> <C-w>k

nnoremap <Leader>n :bn<CR>
cnoremap <Up> <NOP>
cnoremap <Down> <NOP>
cnoremap <Left> <NOP>
cnoremap <Right> <NOP>

" preserve yank after paste
nnoremap <Leader>x "_x
vnoremap p "_dP
vnoremap <Leader>d "_d
vnoremap <Leader>dd "_dd
vnoremap <Leader>D ":D

